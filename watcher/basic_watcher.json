{
  "trigger": {
    "schedule": {
      "interval": "5m"
    }
  },
  "input": {
    "search": {
      "request": {
        "search_type": "query_then_fetch",
        "indices": [
          "test-data-*"
        ],
        "rest_total_hits_as_int": true,
        "body": {
          "size": 0,
          "track_total_hits": true,
          "query": {
            "bool": {
              "must": [
                {
                  "match": {
                    "component.keyword": "Test 1"
                  }
                },
                {
                  "match": {
                    "field1": "data1"
                  }
                },
                {
                  "range": {
                    "@timestamp": {
                      "gte": "now-5m",
                      "lte": "now"
                    }
                  }
                }
              ]
            }
          }
        }
      }
    }
  },
  "condition": {
    "compare": {
      "ctx.payload.hits.total": {
        "lt": 2000
      }
    }
  },
  "actions": {
    "email_admin": {
      "throttle_period_in_millis": 3600000,
      "email": {
        "profile": "standard",
        "priority": "high",
        "to": [
          "test@testemail.com"
        ],
        "subject": "Basic Watcher test",
        "body": {
          "html": "<html></br><br>We would like to alert that the load count {{ctx.payload.hits.total}} for Test 1 is below the threshold limit of 2000.<br><br>Kindly take necessary actions.</br><br></br><br></br><br><i>Report generated by ELK. This is system generated email, please do not reply.</i></br></body></html>"
        }
      }
    }
  }
}